---
import Github from '../assets/astro/Github.astro';
import InstagramIcon from '../assets/astro/InstagramIcon.astro';
import Twitter from '../assets/astro/Twitter.astro';

const today = new Date();
---

<footer class="bg-gray-200 text-center pt-10 pb-32">
  <p>&copy; {today.getFullYear()} Derechos reservados.</p>
  <div class="flex justify-center mt-2 gap-2">
    <a href="/" target="_blank">
      <InstagramIcon />
    </a>
    <a href="https://twitter.com/" target="_blank">
      <Twitter />
    </a>
    <a href="https://github.com/" target="_blank">
      <Github />
    </a>
  </div>
</footer>
